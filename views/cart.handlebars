<div class="container">
    <br>
    <h1 id="cart-headline">Cart</h1>
    <br>

    <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-white">Your cart</span>
                <span class="badge badge-secondary badge-pill">{{cart.items.length}}</span>
            </h4>
            <ul class="list-group mb-3 sticky-top">
                {{#each cart.items}}
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">{{this.name}}</h6>                    
                    </div>
                    <span class="text-muted">${{this.price}}</span>
                </li>
                {{/each}}
                <li class="list-group-item d-flex justify-content-between">
                    <span>Total (USD)</span>
                    <strong>${{cart.totalPrice}}</strong>
                </li>
            </ul>
            <form class="card p-2">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Promo code">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-secondary">Redeem</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-8 order-md-1">
            <div class="row" id="cart-items">
                <div id="" class="col col-md-3">
                    <div class="card productcard col p-0 mr-3 mb-3" style=" border-width: 1.2px; width:100%">
                        <a class="card-block stretched-link text-decoration-none" data-toggle="modal" data-target="#modalNum">

                            <div class="img-hover-zoom m-0">
                                <img src="imgsrc" class="card-img-top m-0" alt="..." style="width: 100%">
                            </div>
                            <div class="card-body">
                                <h4 style="color: white" class="card-title">productName</h4>
                                <h5 style="color: white" class="card-text">$priceStart-$priceEnd</h5>
                                <p style="color: white; overflow: hidden; text-overflow: ellipsis; -webkit-line-clamp: 1;  display: -webkit-box; -webkit-box-orient: vertical;"
                                    class="card-text"><i>description</i></p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div id="products-template" style="display: none">
            <div id="" class="col col-md-3">
                <div class="card productcard col p-0 mr-3 mb-3" style=" border-width: 1.2px; width:100%">
                    <a class="card-block stretched-link text-decoration-none" data-toggle="modal" data-target="#modalNum">
        
                        <div class="img-hover-zoom m-0">
                            <img src="imgsrc" class="card-img-top m-0" alt="..." style="width: 100%">
                        </div>
                        <div class="card-body">
                            <h4 style="color: white" class="card-title">productName</h4>
                            <h5 style="color: white" class="card-text">$priceStart-$priceEnd</h5>
                            <p style="color: white; overflow: hidden; text-overflow: ellipsis; -webkit-line-clamp: 1;  display: -webkit-box; -webkit-box-orient: vertical;"
                                class="card-text"><i>description</i></p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>