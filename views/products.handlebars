<div class="container">
    <br>
    <h1 id="products-headline">Products</h1>
    <br>

    <div class="row" id="search">
        {{#equals user.type "buyer"}}
        <input class="form-control col-12" type="text" id="search-field" placeholder="What do you need?"
            oninput="search()">
        {{/equals}}
        {{#equals user.type "vendor"}}
        <input class="form-control col-12" type="text" id="search-field" placeholder="Search our products"
            oninput="search()">
        {{/equals}}
    </div>

    <br>

    <div id="search-results" class="row">
    </div>

    <div id="products-content" class="">
        <div class="row" id="product-categories">

            <button class="btn btn-outline-light text-center col">Cleaning</button>
            <div class="col-1"></div>
            <button class="btn btn-outline-warning text-center col">Food</button>
            <div class="col-1"></div>
            <button class="btn btn-outline-danger text-center col">Medical</button>
            <div class="col-1"></div>
            <button class="btn btn-outline-success text-center col">Bathroom</button>

        </div>

        <br>
        <br>
        <br>

        <span id="popular-headline">Popular Now</span>
        <br>
        <div class="row " id="popular-now"></div>
    </div>
</div>

<div id="products-template" style="display: none">
    <div id="" class="col col-md-3">
        <div class="card productcard col p-0 mr-3 mb-3" style=" border-width: 1.2px; width:100%">
            <a class="card-block stretched-link text-decoration-none" data-toggle="modal" data-target="#modalNum">

                <div class="img-hover-zoom m-0">
                    <img src="imgsrc" class="card-img-top m-0" alt="..." style="width: 100%">
                </div>
                <div class="card-body">
                    <h4 style="color: white" class="card-title mb-1">productName</h4>
                    categories
                    <h5 style="color: white" class="card-text mt-1">$priceStart-$priceEnd</h5>
                    <p style="color: white; overflow: hidden; text-overflow: ellipsis; -webkit-line-clamp: 1;  display: -webkit-box; -webkit-box-orient: vertical;"
                        class="card-text"><i>description</i></p>
                </div>
            </a>
        </div>
    </div>


    <div class="modal fade" id="modalNum" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        style="background-color: rgb(53, 53, 78, 0.9);" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable" role="document">
            <div class="modal-content" style="background-color:rgb(216, 216, 230)">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-5">
                            <!--Carousel Wrapper-->
                            <div id="carousel-thumbNum" class="carousel slide carousel-fade carousel-thumbnails"
                                data-ride="carousel">
                                <!--Slides-->
                                <div class="carousel-inner" role="listbox">
                                    CarImg
                                </div>
                                {{!-- <ol class="carousel-indicators" id="modalcarouselnum">
                                    CarInd
                                </ol> --}}
                                <a class="carousel-control-prev" href="#carousel-thumbNum" role="button"
                                    data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carousel-thumbNum" role="button"
                                    data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                            <!--/.Carousel Wrapper-->
                        </div>
                        <div class="col-lg-7">
                            <h2 class="h2-responsive product-name">
                                <strong>productName</strong>
                            </h2>
                            categories
                            <h4 class="h4-responsive">
                                <span class="green-text">
                                    <strong>priceStart - priceEnd</strong>
                                </span>
                            </h4>
                            <p>description</p>
                            {{#equals user.type "buyer"}}
                            <div class="card-body align-text-bottom">
                                <div class="row col-md-12">
                                    <div class="form-group col-md-6 ">
                                        <label for="">Price</label>
                                        <input type="number" class="form-control" min="priceStart" max="priceEnd">
                                    </div>
                                    <div class="form-group col-md-6 ">
                                        <label for="">Quantity (limit max)</label>
                                        <input type="number" class="form-control" min="1" max="limit"
                                            onchange="validate()">
                                    </div>
                                </div>
                                <script>

                                </script>
                                <div class="text-center">
                                    <button type="button" class="btn btn-outline-secondary "
                                        data-dismiss="modal">Close</button>
                                    <button class="btn btn-primary">Add to cart
                                        <i class="fas fa-cart-plus ml-2" aria-hidden="true"></i>
                                    </button>
                                </div>
                            </div>
                            {{/equals}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>